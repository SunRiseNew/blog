*
  scroll-behavior: smooth

::-webkit-scrollbar
  width: 5px
  height 5px
::-webkit-scrollbar-thumb
  background-color: $accentColor
  border-radius: 9999px

html
  @media (max-width: 600px)
    font-size: $fontSizeMd

h1, h2, h3, h4, h5, h6
  color: $accentColor

p
  text-indent: 2em
  text-align: justify
  code
    font-family: inherit
    user-select: all
    white-space: nowrap

.search-box .suggestions
  z-index: 1
